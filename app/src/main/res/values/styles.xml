<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SwitchStyle" parent="Base.Widget.AppCompat.CompoundButton.Switch">
        <item name="colorControlActivated">@color/md_light_green_A700</item>
        <item name="colorSwitchThumbNormal">@color/md_grey_800</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/md_white_1000</item>
        <item name="android:textColor">@color/md_grey_800</item>
        <item name="boxStrokeColor">@color/md_grey_600</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textSize">14sp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>

    </style>

</resources>
